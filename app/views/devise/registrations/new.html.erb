<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
           <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">
                  Sign up
                </p>

                <%= form_with model: @user, url: user_registration_path, class: 'mx-1 mx-md-4', local: true do |f| %>
                  <%= render "devise/shared/error_messages", resource: f.object %>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.text_field :nickname, placeholder: "Your Nickname", autofocus: true, class: "form-control", id: "inputNickname"  %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.email_field :email, placeholder: "Your Email", autocomplete: "email", class: "form-control", id: "inputEmail" %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <% validate = "" %>
                      <% if @minimum_password_length %>
                        <% validate = " (#{@minimum_password_length} characters minimum)" %>
                      <% end %>
                      <%= f.password_field :password, placeholder: "Password#{validate}", autocomplete: "new-password", class: "form-control", id: "inputPassword"  %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.password_field :password_confirmation, placeholder: "Repeat your password", autocomplete: "new-password", class: "form-control", id: "inputPasswordConfirmation"  %>
                    </div>
                  </div>

                  <div class="actions d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%= f.submit "Register", class: "btn btn-primary btn-lg" %>
                  </div>

                  <div class="d-flex justify-content-center">
                    <style>
                      a {
                        text-decoration: none;
                        color: black;
                      }
                    </style>
                    <div><%= link_to "Sign in", new_user_session_path, id: "link_to_sign_in" %></div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
